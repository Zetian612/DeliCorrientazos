<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.services.delicias.DeliciasMcActivity"
    android:id="@+id/container_delicias_mc"
    android:padding="14dp"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:text="Selecciona el producto de tu interes"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        app:layoutManager="LinearLayoutManager"
        android:id="@+id/recyclerView_delicias_mc"
        tools:listitem="@layout/item_product_mc"
        />
</FrameLayout>